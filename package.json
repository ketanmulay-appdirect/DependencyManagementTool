{
  "name": "security-dependency-tool",
  "version": "1.0.0",
  "description": "A comprehensive web-based tool for managing security vulnerabilities identified by Wiz Security across multiple repositories",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently --names \"FRONTEND,BACKEND\" --prefix-colors \"cyan,magenta\" \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd src/frontend && npm run dev",
    "dev:backend": "cd src/backend && npm run dev",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd src/frontend && npm run build",
    "build:backend": "cd src/backend && npm run build",
    "start": "concurrently --names \"FRONTEND,BACKEND\" --prefix-colors \"cyan,magenta\" \"npm run start:frontend\" \"npm run start:backend\"",
    "start:frontend": "cd src/frontend && npm start",
    "start:backend": "cd src/backend && npm start",
    "install:all": "echo 'ðŸ“¦ Installing root dependencies...' && npm install && echo 'ðŸ“¦ Installing frontend dependencies...' && cd src/frontend && npm install && echo 'ðŸ“¦ Installing backend dependencies...' && cd ../backend && npm install && echo 'âœ… All dependencies installed!'",
    "test": "concurrently --names \"FRONTEND,BACKEND\" --prefix-colors \"cyan,magenta\" \"npm run test:frontend\" \"npm run test:backend\"",
    "test:frontend": "cd src/frontend && npm test",
    "test:backend": "cd src/backend && npm test",
    "lint": "concurrently --names \"FRONTEND,BACKEND\" --prefix-colors \"cyan,magenta\" \"npm run lint:frontend\" \"npm run lint:backend\"",
    "lint:frontend": "cd src/frontend && npm run lint",
    "lint:backend": "cd src/backend && npm run lint"
  },
  "keywords": [
    "security",
    "dependency-management",
    "vulnerability",
    "github",
    "jira",
    "wiz"
  ],
  "author": "Security Team",
  "license": "MIT",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "typescript": "^5.3.3"
  },
  "workspaces": [
    "src/frontend",
    "src/backend"
  ],
  "dependencies": {
    "@octokit/plugin-retry": "^8.0.1",
    "@octokit/rest": "^22.0.0"
  }
}
