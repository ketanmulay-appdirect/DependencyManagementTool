# Backend Configuration
PORT=3001
NODE_ENV=development

# Database Configuration (Optional - for persistence)
MONGODB_URI=mongodb://localhost:27017/security-dependency-tool
REDIS_URL=redis://localhost:6379

# Authentication (Optional - for user management)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# GitHub Integration (Required)
GITHUB_TOKEN=your-github-personal-access-token
GITHUB_APP_ID=your-github-app-id
GITHUB_APP_PRIVATE_KEY=your-github-app-private-key

# JIRA Integration (Required)
JIRA_BASE_URL=https://your-organization.atlassian.net
JIRA_EMAIL=your-email@company.com
JIRA_API_TOKEN=your-jira-api-token
JIRA_PROJECT_KEY=WIZ

# Security
ENCRYPTION_KEY=your-32-character-encryption-key-here
BCRYPT_ROUNDS=12

# External APIs (Optional)
WIZ_API_URL=https://api.wiz.io
WIZ_API_TOKEN=your-wiz-api-token

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# API Keys (Optional - for external integrations)
API_KEY=your-api-key-for-external-access
