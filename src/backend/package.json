{
  "name": "security-dependency-backend",
  "version": "1.0.0",
  "description": "Backend API for Security Dependency Management Tool",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon",
    "dev:preserve": "PRESERVE_REPO=true nodemon",
    "build": "tsc",
    "start": "node dist/index.js",
    "start:preserve": "PRESERVE_REPO=true node dist/index.js",
    "test": "jest",
    "lint": "eslint src --ext .ts"
  },
  "dependencies": {
    "@octokit/plugin-retry": "^8.0.1",
    "@octokit/rest": "^22.0.0",
    "axios": "^1.6.0",
    "bcryptjs": "^2.4.3",
    "bull": "^4.12.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "mongoose": "^8.0.0",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "redis": "^4.6.0",
    "semver": "^7.7.2",
    "simple-git": "^3.20.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "xml2js": "^0.6.2",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/lodash": "^4.14.202",
    "@types/mongoose": "^5.11.97",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.0.0",
    "@types/semver": "^7.7.0",
    "@types/uuid": "^9.0.7",
    "@types/xml2js": "^0.4.14",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "<rootDir>/test/**/*.test.ts",
      "<rootDir>/test/**/*.test.js"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/src/temp/",
      "<rootDir>/node_modules/",
      "<rootDir>/temp/"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/temp/**",
      "!temp/**"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/test/setup.ts"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!(ts-jest)/)"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/src/temp/",
      "<rootDir>/temp/"
    ],
    "extensionsToTreatAsEsm": [],
    "globals": {
      "ts-jest": {
        "useESM": false
      }
    }
  }
}
